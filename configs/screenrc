# use visual bell
vbell on
# replace ctrl-A by ctrl-O
#escape ^Oo
# set a big scrolling buffer
defscrollback 5000
# Set the caption on the bottom line
caption always "%{= kw}%H | %-w%{= wk}%n %t%{-}%+w | %-= (%l) . %0c"
#caption always "%{= kw}%H | %-w%{= wk}%n %t%{-}%+w | %-= (%l) %d.%m.%Y %0c"
ignorecase on
altscreen on

