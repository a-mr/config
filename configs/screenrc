# use visual bell
vbell on
# replace ctrl-A by ctrl-N
escape ^Nn
# fix ^n ^n calling other
bind n next
bind ^n next
bind o other
bind ^o other
# set a big scrolling buffer
defscrollback 5000
# Set the caption on the bottom line
caption always "%{= ky}%-w%{= yk}%n %t%{-}%+w | %-= %0c %H"

# relieve stress on pinky
markkeys ^F=^T:j=t

ignorecase on
altscreen on

