" handle long lines in a smarter way
function! Setshowbreak()
    "set showbreak=\ \ ‚ï∞‚îÄ\ 
    if has('win32') && has('gui_running')
        set showbreak=\ \ \ \ \ ->\ 
    else
        set showbreak=\ \ \ \ \ ‚Ü™\ 
    endif
    if v:version >= 800
        set breakindent
    endif
endfunction
call Setshowbreak()

function! UnSetshowbreak()
    set showbreak=
    if v:version >= 800
        set nobreakindent
    endif
endfunction

